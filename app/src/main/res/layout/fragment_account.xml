<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.account">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="100">


        <RelativeLayout
            android:id="@+id/top_section"
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_weight="30">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/sign_in_vendor_img"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:layout_margin="15dp"
                android:src="@mipmap/ic_launcher" />


            <TextView
                android:id="@+id/Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="15dp"
                android:layout_toEndOf="@id/sign_in_vendor_img"
                android:layout_toRightOf="@id/sign_in_vendor_img"
                android:text="John Chukuwdi" />


            <TextView
                android:id="@+id/rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/Name"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="15dp"
                android:layout_toEndOf="@id/sign_in_vendor_img"
                android:layout_toRightOf="@id/sign_in_vendor_img"
                android:text="Rating" />


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/available"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_margin="10dp"
                android:text="Available"
                android:textAllCaps="false" />


            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_margin="10dp"
                android:layout_toLeftOf="@id/available"
                android:text="Report"
                android:textAllCaps="false"
                android:layout_toStartOf="@id/available" />

        </RelativeLayout>


        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_gravity="bottom"
            android:layout_weight="70" />


    </LinearLayout>

</FrameLayout>